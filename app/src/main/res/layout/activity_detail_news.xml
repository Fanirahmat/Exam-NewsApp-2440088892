<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pages.DetailNewsActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                app:cardCornerRadius="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/iv_detail_news"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                     />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_detail_title_news"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:text="Man says he put 26.5 pounds of dynamite in friend's cars as 'a joke"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView" />

            <TextView
                android:id="@+id/tv_detail_source"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="BBC News"
                app:layout_constraintEnd_toEndOf="@+id/tv_detail_title_news"
                app:layout_constraintStart_toStartOf="@+id/tv_detail_title_news"
                app:layout_constraintTop_toBottomOf="@+id/tv_detail_title_news" />

            <TextView
                android:id="@+id/tv_detail_publish_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="24 Agustus 2023"
                app:layout_constraintEnd_toEndOf="@+id/tv_detail_source"
                app:layout_constraintStart_toStartOf="@+id/tv_detail_source"
                app:layout_constraintTop_toBottomOf="@+id/tv_detail_source" />

            <TextView
                android:id="@+id/tv_detail_author"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="John Doe"
                app:layout_constraintEnd_toEndOf="@+id/tv_detail_publish_date"
                app:layout_constraintStart_toStartOf="@+id/tv_detail_publish_date"
                app:layout_constraintTop_toBottomOf="@+id/tv_detail_publish_date" />

            <TextView
                android:id="@+id/tv_detail_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:text="text content berita..."
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_detail_author" />

            <TextView
                android:id="@+id/tv_detail_learn_more"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="20dp"
                android:text="Learn More..."

                android:textColor="@color/colorTextLink"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/tv_detail_content"
                app:layout_constraintStart_toStartOf="@+id/tv_detail_content"
                app:layout_constraintTop_toBottomOf="@+id/tv_detail_content" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>